@model List<BugTracker.Models.BugModel>
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Bug History</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="Home">Home</a></li>
                    <li class="breadcrumb-item active">Bug History</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <!-- Bug History -->
        <div class="card recent-sales">
            <div class="card-body">
                <h5 class="card-title">Recent Bugs <span>| Add filter desc here</span></h5>
                <table class="table datatable table-hover table-striped">
                    <thead @*class="thead-dark"*@>
                        <tr>
                            <th scope="col">Bug ID</th>
                            <!--Assigned to could use dropdown menu of all valid assignees-->
                            <th scope="col">Created By</th>
                            <th scope="col">Description</th>
                            <th scope="col">Date Created</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bug in Model)
                        {
                            <tr>
                                <th scope="row"><a href="#">@bug.BugID</a></th>
                                <td>@bug.CreatedBy</td>
                                <td>@bug.BugDescription</td>
                                <td>@bug.CreatedOn</td>
                                @if (bug.BugStatus.Equals("New"))
                                {
                                    <td><span class="badge bg-primary" style="width: 100%">@bug.BugStatus</span></td>

                                }
                                else if (bug.BugStatus.Equals("Open"))
                                {
                                    <td><span class="badge bg-warning" style="width: 100%">@bug.BugStatus</span></td>

                                }
                                else if (bug.BugStatus.Equals("Complete"))
                                {
                                    <td><span class="badge bg-success" style="width: 100%">@bug.BugStatus</span></td>

                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @*End Bug History*@

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
    </footer><!-- End Footer -->

</body>
</html>
